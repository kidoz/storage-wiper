# Maintainer: Your Name <your.email@example.com>

pkgname=storage-wiper
pkgver=1.3.1
pkgrel=1
pkgdesc='Secure disk wiping tool with GTK4/libadwaita interface and DoD-compliant algorithms'
arch=('x86_64')
url='https://github.com/kidoz/storage-wiper'
license=('MIT')
install=storage-wiper.install
depends=(
  'gtk4'
  'gtkmm-4.0'
  'libadwaita'
  'polkit'
)
makedepends=(
  'meson'
  'ninja'
)
source=("$pkgname-$pkgver.tar.gz::https://github.com/kidoz/storage-wiper/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('SKIP')

build() {
  arch-meson "$pkgname-$pkgver" build
  meson compile -C build
}

package() {
  meson install -C build --destdir "$pkgdir"

  # Install license
  install -Dm644 "$pkgname-$pkgver/LICENSE.md" \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
